<div class="container">

  <h2>{{data.school}}</h2>
</div>
  <canvas id="myChart" width="700" height="700"></canvas>
 <script>
var ctx = document.getElementById("myChart").getContext('2d');
var rawTitles = "{{data.titles}}";
var rawData = "{{data.data}}";
var titles = rawTitles.split(",");
var data = rawData.split(",");
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: titles,
        datasets: [{
            label: '# of Votes',
            data: data,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
      responsive: false,
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
